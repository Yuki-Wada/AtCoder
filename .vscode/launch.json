{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/src/main",
            "args": ["<", "cpp/src/input.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "OCaml",
            "type": "ocamldebug",
            "request": "launch",
            "program": "${workspaceRoot}/ocaml/a.out",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "arguments": ["<", "input.txt"]
        },
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/python/main.py",
            "console": "integratedTerminal",
            "args": ["<", "python/input.txt"]
        }
    ]
}